digraph dfa {
    rankdir = LR;
    __start [style = invis, shape = point];
    __start -> "{0}" [ label = "start" ];
    node [shape = doublecircle]; "{0,1}"
    node [shape = circle];
    "{0}" -> "{2}" [ label = "t" ];
    "{0}" -> "{}" [ label = "h" ];
    "{2}" -> "{0,1}" [ label = "t" ];
    "{2}" -> "{}" [ label = "h" ];
    "{0,1}" -> "{2}" [ label = "t" ];
    "{0,1}" -> "{3}" [ label = "h" ];
    "{}" -> "{}" [ label = "t" ];
    "{}" -> "{}" [ label = "h" ];
    "{3}" -> "{}" [ label = "t" ];
    "{3}" -> "{}" [ label = "h" ];
}
